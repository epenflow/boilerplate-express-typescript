{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,

		/* Plugin configurations*/
		"plugins": [
			{
				"name": "gql.tada/ts-plugin",
				/* Schema configuration*/
				"schema": "./src/schema/schema.graphql",
				/* Schema output location*/
				"tadaOutputLocation": "./src/schema/graphql-env.d.ts"
			}
		]
	},
	"include": ["src/**/*.ts"]
}
